@model Siparis
@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!--begin::Subheader-->
<!--begin::Subheader-->
<div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">

    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-1">
            <!--begin::Page Heading-->
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold my-1 mr-5"> Sipariş Detay Listesi</h5>
                <!--end::Page Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page Heading-->
        </div>
        <!--end::Info-->

    </div>
</div>
<!--end::Subheader-->
<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Dashboard-->
        <!--begin::Row-->
        <div class="row">
            <div class="flex-row-fluid ml-lg-8">
                <!--begin::Card-->
                <div class="card card-custom">
                    <!--begin::Header-->
                    <div class="card-header flex-wrap border-0 pt-6 pb-0">
                        <h3 class="card-title align-items-start flex-column">
                            <span class="card-label font-weight-bolder text-dark"> Sipariş Detay Listesi</span>
                            <span class="text-muted mt-1 font-weight-bold font-size-sm"></span>
                        </h3>
                        <div class="card-toolbar">
                            <div class="dropdown dropdown-inline">
                                <!--begin::Trigger Modal-->
                                <!--end::Trigger Modal-->
                            </div>
                        </div>
                    </div>
                    <!--end::Header-->
                    <!--begin::Body-->
                    <div class="card-body">
                        <!--begin: Search Form-->
                        <!--begin::Search Form-->
                        <div class="mb-10">
                            @*@Html.Partial("EnjeksiyonFilterForm")*@
                        </div>
                        <!--end::Search Form-->
                        <!--end: Search Form-->
                        <!--begin: Datatable-->
                        <div class="">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> Ürün </th>
                                        <th> Termin Tarihi </th>
                                        <th> Sipariş Kodu </th>
                                        <th> Sipariş Adı </th>
                                        <th> Durum </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@Model.Cari.Unvan</td>
                                        <td>@Model.TerminTarihi.ToString("dd MM yyyy")</td>
                                        <td>@Model.SiparisKod</td>
                                        <td>@Model.SiparisIsim</td>
                                        <td>@Model.SiparisDurum.Durum</td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>
                        <!--end: Datatable-->
                    </div>
                    <!--end::Body-->
                </div>
                <!--end::Card-->
                <!--begin::Card-->
                <div class="card card-custom mt-3">
                    <!--begin::Header-->
                    <div class="card-header flex-wrap border-0 pt-6 pb-0">
                        <h3 class="card-title align-items-start flex-column">
                            <span class="card-label font-weight-bolder text-dark"> Sevkiyat Listesi</span>
                            <span class="text-muted mt-1 font-weight-bold font-size-sm"></span>
                        </h3>
                        <div class="card-toolbar">
                            <div class="dropdown dropdown-inline">
                                <!--begin::Trigger Modal-->
                                <!--end::Trigger Modal-->
                            </div>
                        </div>
                    </div>
                    <!--end::Header-->
                    <!--begin::Body-->
                    <div class="card-body">
                        <!--begin: Search Form-->
                        <!--begin::Search Form-->
                        <div class="mb-10">
                            @*@Html.Partial("EnjeksiyonFilterForm")*@
                        </div>
                        <!--end::Search Form-->
                        <!--end: Search Form-->
                        <!--begin: Datatable-->
                        <div class="">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th> Cari </th>
                                        <th> Adet </th>
                                        <th> Tarih </th>
                                        <th> Açıklama </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model.StokHareket.ToList())
                                    {
                                        foreach (var h in item.StokCikisHareket.ToList())
                                        {
                                            <tr>
                                                <td> @(h.Cari?.Unvan) </td>
                                                <td> @h.Adet </td>
                                                <td> @h.CikisTarih.ToString("dd MM yyyy") </td>
                                                <td> @h.Aciklama </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>

                        </div>
                        <!--end: Datatable-->
                    </div>
                    <!--end::Body-->
                </div>
                <!--end::Card-->
            </div>
        </div>
        <!--end::Row-->
        <!--end::Dashboard-->
    </div>
    <!--end::Container-->


</div>
<!--end::Entry-->

