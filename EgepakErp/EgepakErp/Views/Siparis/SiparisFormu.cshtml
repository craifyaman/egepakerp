
@{
    ViewBag.Title = "Sipariş Formu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Siparis.css" rel="stylesheet" />
<!--begin::Subheader-->
<!--begin::Subheader-->
<div class="subheader py-2 py-lg-6 subheader-solid" id="kt_subheader">

    <div class="container-fluid d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <!--begin::Info-->
        <div class="d-flex align-items-center flex-wrap mr-1">
            <!--begin::Page Heading-->
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold my-1 mr-5">Sipariş Formu</h5>
                <!--end::Page Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item">
                        <a href="/" class="text-muted">Anasayfa</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="" class="text-muted">Sipariş Formu</a>
                    </li>
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page Heading-->
        </div>
        <!--end::Info-->

    </div>
</div>
<!--end::Subheader-->
<!--begin::Entry-->
<div class="d-flex flex-column-fluid">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Dashboard-->
        <!--begin::Row-->
        <div class="row">
            <div class="flex-row-fluid ml-lg-8">
                <!--begin::Card-->
                <div class="card card-custom">
                    <!--begin::Header-->
                    <div class="card-header flex-wrap border-0 pt-6 pb-0">
                        <h3 class="card-title align-items-start flex-column">
                            <span class="card-label font-weight-bolder text-dark">Aşağıdaki formdan siparişinizi oluşturabilirsiniz</span>
                            <span class="text-muted mt-1 font-weight-bold font-size-sm"></span>
                        </h3>
                        <div class="card-toolbar">
                            <div class="dropdown dropdown-inline">
                                <!--begin::Trigger Modal-->
                                <a href="#" id="0" class="btn btn-success font-weight-bolder font-size-sm "
                                   event="maliyetTablosuGetir"
                                   aria-haspopup="true" aria-expanded="false">Maliyet Tablosu Getir</a>
                                <!--end::Trigger Modal-->
                            </div>
                        </div>
                    </div>
                    <!--end::Header-->
                    <!--begin::Body-->
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-lg-4">
                                <div class="form-group row">
                                    <label>Cari:</label>
                                    <select id="CariId" name="CariId" class="form-control select2" url="/Cari/ListeSelect2" markup="Cari" placeHolder="Cari Seçiniz"></select>
                                </div>
                                <div class="form-group row">
                                    <label>Ürün Seçimi:</label>
                                    <select id="UrunId" name="UrunId" class="form-control select2" url="/Urun/ListeSelect2" markup="Urun" placeHolder="Ürün Seçiniz">
                                    </select>
                                </div>
                                <div class="form-group row">
                                    <label>Kalıp Seçimi:</label>
                                    <select id="KalipId" name="KalipId" class="form-control select2" url="/Kalip/ListeSelect2" markup="Kalip" placeHolder="Kalıp Seçiniz">
                                    </select>
                                </div>
                            </div>

                            <div class="col-lg-8" id="UrunKaliplari">

                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-lg-12" id="maliyetTablosu">

                            </div>
                        </div>
                    </div>
                    <!--end::Body-->
                </div>
                <!--end::Card-->
            </div>
        </div>
        <!--end::Row-->
        <!--end::Dashboard-->
    </div>
    <!--end::Container-->


</div>
<!--end::Entry-->

@section Scripts{
    <script src="~/Scripts/Siparis.js?v=@ScriptVersion"></script>
    <script>
        Siparis.EventInit();
        Global.init();
        SelectPickerRemote.init();
    </script>

}
