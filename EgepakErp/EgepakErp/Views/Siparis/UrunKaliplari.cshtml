@model List<Kalip>

<input type="hidden" id="kalipIdList" value="@Model.Select(s=>s.KalipId.ToString()).Aggregate((a,b)=>a+","+b)" />
    
<table class="table table-bordered table-hover table-sm mt-8">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Kalıp Kodu</th>
            <th>Kalıp Göz Sayısı</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>

                    @item.Adi
                </td>
                <td>@item.KalipNo</td>
                <td>@item.KalipGozSayisi</td>
                <td>
                    <a href="#" class="btn btn-primary btn-sm">Ekle</a>
                    <a href="#" class="btn btn-info btn-sm">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>
