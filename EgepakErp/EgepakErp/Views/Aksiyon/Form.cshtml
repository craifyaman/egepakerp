@model Aksiyon
@{
    int UretimEmirId = (int)ViewBag.UretimEmirId;
    var aksiyonTypeId = Convert.ToInt32(ViewBag.AksiyonType);
}
<!--begin::Form-->
<form id="AksiyonForm">
    @Html.HiddenFor(x => x.AksiyonId)
    <input type="hidden" value="@aksiyonTypeId" name="AksiyonTypeId" id="AksiyonTypeId"/>
    <input type="hidden" value="@ViewBag.UretimEmirDurumId" name="UretimEmirDurumId" id="UretimEmirDurumId"/>

    @if (Model == null)
    {
        <input type="hidden" id="UretimEmirId" name="UretimEmirId" value="@UretimEmirId" />
    }
    else
    {
        @Html.HiddenFor(x => x.UretimEmirId)
    }

    <div class="form-group row">
        <div class="col-lg-12">
            <label>Açıklama:</label>
            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
        </div>

        @*<div class="col-lg-12">
            @{
                var aksiyonTypeList = BaseAksiyonType().ToList();
            }
            <label>Aksiyon tip:</label>
            <select class="form-control" id="AksiyonTypeId" name="AksiyonTypeId">
                @foreach (var item in aksiyonTypeList)
                {
                    var attr = item.AksiyonTypeId == Model?.AksiyonTypeId ? "selected" : "";
                    <option @attr value="@(item.AksiyonTypeId)">@(item.Aciklama)</option>
                }
            </select>
        </div>*@

    </div>
    @if (Model != null)
    {
        <div class="form-group row">
            <div class="col-6">
                <label>Başlangıç:</label>
                @Html.TextBoxFor(x => x.AksiyonBaslangic, new { @class = "form-control", autocomplete = "off" })
            </div>
            <div class="col-6">
                <label>Bitiş:</label>
                @Html.TextBoxFor(x => x.AksiyonBitis, new { @class = "form-control", autocomplete = "off" })
            </div>
        </div>
    }
    else
    {
        <div class="form-group row">
            <div class="col-6">
                <label>Başlangıç:</label>
                <input type="text" class="form-control form-control-solid datetimepicker-input" autocomplete="off" name="AksiyonBaslangic" id="AksiyonBaslangic" placeholder="Başlangıç zamanı seçin" data-toggle="datetimepicker" data-target="#AksiyonBaslangic" value="@(Model?.AksiyonBaslangic.ToString("yyyy-MM-dd HH:mm"))" />

            </div>
            <div class="col-6">
                <label>Bitiş:</label>
                <input type="text" class="form-control form-control-solid datetimepicker-input" autocomplete="off" name="AksiyonBitis" id="AksiyonBitis" placeholder="Bitiş zamanı seçin" data-toggle="datetimepicker" data-target="#AksiyonBitis" value="@(Model?.AksiyonBitis.ToString("yyyy-MM-dd HH:mm"))" />

            </div>
        </div>
    }
</form>
<!--end::Form-->
