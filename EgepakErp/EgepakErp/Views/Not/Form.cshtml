@model Not

<!--begin::Form-->
<form id="notForm">
    <input type="hidden" name="NotId" value="@(Model?.NotId)" />
    <div class="form-group row">
        <div class="col-lg-12">
            <label>Müşteri Seçiniz:</label>
            <select id="CariId" name="CariId" class="form-control select2" url="/Cari/ListeSelect2" markup="" placeHolder="Kişi Seçiniz">
                @if (Model != null)
                {
                    <option selected value="@Model.CariId">@Model.Cari.Unvan</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-12">
            <label>Acıklama:</label>
            <textarea class="form-control" name="Aciklama" rows="5">@(Html.Raw(Model?.Aciklama))</textarea>
        </div>
    </div>
</form>
<!--end::Form-->
