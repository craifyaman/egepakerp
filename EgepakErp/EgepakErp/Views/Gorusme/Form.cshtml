@model Gorusme

<!--begin::Form-->
<form id="gorusmeForm">
    <input type="hidden" name="GorusmeId" value="@(Model?.GorusmeId)" />

    <div class="form-group row">
        <div class="col-lg-6">
            <label>Kişi:</label>
            <select id="KisiId" name="KisiId" class="form-control select2" url="/Kisi/ListeSelect2" markup="kisi" placeHolder="Kişi Seçiniz">
                @if (Model != null)
                {
                    <option selected value="@Model.KisiId">@Model.Kisi.AdSoyad</option>
                }
            </select>
        </div>
        <div class="col-lg-6">
            <label>Görüşme Tipi:</label>
            <div class="input-group">
                <select name="GorusmeTipId" id="GorusmeTipId" class="form-control form-control-solid selectpicker">
                    <option value="">Görüşme Tipi Şeçiniz</option>
                    @foreach (var item in baseGorusmeTip)
                    {
                        var chk = Model != null && Model.GorusmeTipId == item.GorusmeTipId ? "selected" : "";
                        <option @chk value="@item.GorusmeTipId">@item.Adi</option>
                    }
                </select>
                <a href="#" class="btn btn-success" event="gorusmeTipFormPopup" formTitle="Gçrüşme Tip Ekle" id="0" title="Görüşme Tipi Ekle" data-toggle="tooltip" data-placement="top">
                    <i class="flaticon2-add"></i>
                </a>
            </div>

        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <label>Konu:</label>
            <input type="text" name="Konu" class="form-control" placeholder="Konu" value="@(Model?.Konu)">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <label>Acıklama:</label>
            <textarea class="form-control" name="Aciklama" rows="5">@(Html.Raw(Model?.Aciklama))</textarea>
        </div>

    </div>
    <div class="form-group row">
        <div class="col-lg-12">
            <label>Görüşme Tarih ve Saat:</label>
            <input class="form-control" name="GorusmeTarihi" type="datetime-local" value="@(Model==null? DateTime.Now.ToString("yyyy-MM-ddTHH:mm"):Model.GorusmeTarihi.ToString("yyyy-MM-ddTHH:mm"))">
        </div>

    </div>

</form>
<!--end::Form-->
