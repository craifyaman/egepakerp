<div class="row align-items-center">
    <div class="col-lg-12 col-xl-12">
        <div class="row align-items-center">
            <div class="col-md-2 my-2 my-md-0">
                <select id="MakineId" class="select2 filterFormControl defaultSelect2">
                    <option value="0">Tüm Makineler</option>
                    @{
                        var makineList= BaseMakine().ToList();
                        foreach (var makine in makineList)
                        {
                            <option value="@makine.MakineId">@makine.MakineAd</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-2 my-2 my-md-0">
                <select id="KisiId" class="select2 filterFormControl defaultSelect2">
                    <option value="0">Tüm Kişiler</option>
                    @{
                        var kisiList = BaseKisi().ToList();
                        foreach (var kisi in kisiList)
                        {
                            <option value="@kisi.KisiId">@kisi.AdSoyad</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-2 my-2 my-md-0">
                <select id="RaporTypeId" class="select2 filterFormControl defaultSelect2">
                    <option value="0">Tüm Bölümler</option>
                    <option value="@((int)EUretimEmirAksiyonType.Enjeksiyon)">Enjeksiyon</option>
                    <option value="@((int)EUretimEmirAksiyonType.Metalize)">Metalize</option>
                    <option value="@((int)EUretimEmirAksiyonType.Montaj)">Montaj</option>
                    <option value="@((int)EUretimEmirAksiyonType.EvMontaj)">Ev Montaj</option>
                    <option value="@((int)EUretimEmirAksiyonType.SicakBaski)">Sıcak Baskı</option>
                </select>
            </div>

            <div class="col-md-2 my-2 my-md-0">
                <input type='text' class="basicDatePicker form-control filterFormControl" name="baslama" id="baslama" placeholder="Başlangıç tarihi seçin" autocomplete="off" />
            </div>
            <div class="col-md-2 my-2 my-md-0">
                <input type='text' class="basicDatePicker form-control filterFormControl" name="bitis" id="bitis" placeholder="Bitiş tarihi seçin" autocomplete="off" />
            </div>

            @*<div class="col-md-2 my-2 my-md-0">
            <div class="input-icon">
                <input type="text" class="xxxx form-control form-control-solid filterFormControl " placeholder="Kalıp adı yada Kodu..." id="searchQuery" />
                <span>
                    <i class="flaticon2-search-1 text-muted"></i>
                </span>
            </div>
        </div>*@
        </div>
    </div>
</div>
