@using EgePakErp.Enums;


@model UretimEmir

<!--begin::Form-->
<form id="UretimEmirForm">
    @Html.HiddenFor(x => x.UretimEmirId)

    <div class="form-group row">
        <div class="col-lg-12">
            <label>Sipariş:</label>
            @{
                var siparisler = BaseSiparis().Where(x => x.SiparisDurumId != (int)ESiparisType.Tamamlandi).ToList();

            }
            <select class="form-control" id="SiparisId" name="SiparisId">
                <option>Sipariş seçin</option>

                @foreach (var item in siparisler)
                {
                    var attr = item.SiparisId == Model?.SiparisKalip.SiparisId ? "selected" : "";
                    <option @attr value="@item.SiparisId">@item.SiparisAdi - (@item.Cari.Unvan)</option>
                }

            </select>
        </div>


        <div class="col-lg-12" id="SiparisKalipList" style="">
            @if (Model != null)
            {

                var siparisKaliplar = BaseSiparisKalipListe().Where(x => x.SiparisId == Model.SiparisKalip.SiparisId);

                var liste = siparisKaliplar?.GroupBy(x => x.KalipKod).Select(x => new
                {
                    Kod = x.FirstOrDefault().KalipKod,
                    SiparisKalipId = x.FirstOrDefault().SiparisKalipId,
                    SiparisId = x.FirstOrDefault().SiparisId
                }).ToList();

                var kalipListe = BaseKalip().ToList();


                <label>Siparis Kalıpları:</label>
                <select class="form-control" id="SiparisKalipId" name="SiparisKalipId">
                    @foreach (var item in liste)
                    {
                        var kalip = kalipListe.FirstOrDefault(x => x.ParcaKodu == item.Kod);
                        var attr = item.SiparisKalipId == Model?.SiparisKalipId ? "selected" : "";
                        <option @attr value="@(item.SiparisKalipId)">@(kalip?.Adi)</option>
                    }
                </select>
            }

            else
            {

            }

        </div>

        <div class="col-lg-12">
            <label>Makine:</label>
            @{
                var makineler = BaseMakine().ToList();
            }
            <select class="form-control" id="MakineId" name="MakineId">
                @foreach (var item in makineler)
                {
                    var attr = item.MakineId == Model?.MakineId ? "selected" : "";
                    <option @attr value="@item.MakineId">@item.MakineAd</option>
                }
            </select>
        </div>




    </div>
    @if (Model != null)
    {
        <div class="form-group row">
            <div class="col-6">
                <label>Başlangıç:</label>
                @Html.TextBoxFor(x => x.Baslangic, new { @class = "form-control", autocomplete = "off" })
            </div>
            <div class="col-6">
                <label>Bitiş:</label>
                @Html.TextBoxFor(x => x.Bitis, new { @class = "form-control", autocomplete = "off" })
            </div>
        </div>
    }
    else
    {
        <div class="form-group row">
            <div class="col-6">
                <label>Başlangıç:</label>
                <input type="text" class="form-control form-control-solid datetimepicker-input" autocomplete="off" name="Baslangic" id="Baslangic" placeholder="Başlangıç zamanı seçin" data-toggle="datetimepicker" data-target="#Baslangic" value="@(Model?.Baslangic.ToString("yyyy-MM-dd HH:mm"))" />

            </div>
            <div class="col-6">
                <label>Bitiş:</label>
                <input type="text" class="form-control form-control-solid datetimepicker-input" autocomplete="off" name="Bitis" id="Bitis" placeholder="Bitiş zamanı seçin" data-toggle="datetimepicker" data-target="#Bitis" value="@(Model?.Bitis.ToString("yyyy-MM-dd HH:mm"))" />

            </div>
        </div>
    }


    <div class="form-group row">
        <div class="col-lg-12">
            <label>Sipariş Adet:</label>
            @Html.TextBoxFor(x => x.SiparisAdet, new { @class = "form-control", @type = "number" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <label>Üretilen Adet:</label>
            @Html.TextBoxFor(x => x.UretilenAdet, new { @class = "form-control", @type = "number" })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-lg-12">
            <label>Durum:</label>
            @{
                var durumlar = BaseUretimEmirDurum().ToList();
                var durumId = Model != null ? Model.UretimEmirDurumId : 0;
            }
            <select class="form-control" id="UretimEmirDurumId" name="UretimEmirDurumId">
                @foreach (var item in durumlar)
                {
                    var attr = item.UretimEmirDurumId == durumId ? "selected" : "";
                    <option @attr value="@item.UretimEmirDurumId">@item.Durum</option>
                }
            </select>
        </div>
    </div>

    @if (Model != null)
    {
        <div>
            yol  @Model.SiparisKalip.YaldizId
        </div>
    }
    @if (Model != null)
    {
        <div class="form-group row">
            <div class="col-lg-6">
                <div>Önceki Süreçler:</div>
            </div>
            <div class="col-lg-6">
                <a href="#" class="btn btn-primary" event="AksiyonEkle" UretimEmirId="@Model.UretimEmirId">Aksiyon Ekle</a>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="timeline timeline-justified timeline-4">
                <div class="timeline-bar"></div>
                <div class="timeline-items">
                    @{
                        var aksiyonList = BaseAksiyon().Where(x => x.UretimEmirId == Model.UretimEmirId).ToList();
                        <div class="timeline-item">
                            <div class="timeline-badge">
                                <div class="bg-danger"></div>
                            </div>

                            <div class="timeline-label">
                                <span class="text-primary font-weight-bold">@(Model?.Baslangic.ToString("HH:mm"))</span>
                            </div>

                            <div class="timeline-content">
                                Üretime Gönderildi
                            </div>
                        </div>
                        foreach (var aks in aksiyonList)
                        {
                            <div class="timeline-item">
                                <div class="timeline-badge">
                                    <div class="bg-danger"></div>
                                </div>

                                <div class="timeline-label">
                                    <span class="text-primary font-weight-bold">@aks.AksiyonBaslangic.ToString("HH:mm")</span>
                                </div>

                                <div class="timeline-content">
                                    @aks.Aciklama (tip = @aks.AksiyonType.Aciklama)
                                </div>
                            </div>
                        }

                        if (Model.UretimEmirDurumId == (int)EUretimEmirDurum.Tamamlandi)
                        {
                            <div class="timeline-item">
                                <div class="timeline-badge">
                                    <div class="bg-success"></div>
                                </div>

                                <div class="timeline-label">
                                    <span class="text-primary font-weight-bold">@(aksiyonList.LastOrDefault()?.AksiyonBitis.ToString("HH:mm"))</span>
                                </div>

                                <div class="timeline-content">
                                    Tamamlandı
                                </div>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>


    }


</form>
<!--end::Form-->
