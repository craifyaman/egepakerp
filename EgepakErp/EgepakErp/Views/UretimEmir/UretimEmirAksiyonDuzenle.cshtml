@using EgePakErp.Enums;
@model UretimEmirAksiyon
<!--begin::Form-->
<form id="UretimEmirAksiyonForm">
    @Html.HiddenFor(x => x.UretimEmirAksiyonId)
    @Html.HiddenFor(x => x.UretimEmirAksiyonTypeId)

    <div class="form-group row">
        <div class="col-lg-12">
            <label>Çalışan Seçin:</label>
            @{
                var kisiList = BaseCalisan().ToList();
            }
            <select class="form-control select2" id="CalisanId" name="CalisanId">
                <option>Çalışan Seçin</option>
                @foreach (var item in kisiList)
                {
                    var attr = item.CalisanId == Model?.CalisanId ? "selected" : "";
                    <option @attr value="@item.CalisanId">@item.AdSoyad</option>
                }

            </select>
        </div>
    </div>

    @if (Model?.UretimEmirAksiyonTypeId == (int)EUretimEmirAksiyonType.Enjeksiyon)
    {
        <div class="form-group row">
            <div class="col-lg-12">
                <label>Makine Seçin:</label>
                @{
                    var makineList = BaseMakine().ToList();
                }
                <select class="form-control select2 defaultSelect2" id="MakineId" name="MakineId">
                    <option>Makine Seçin</option>

                    @foreach (var item in makineList)
                    {
                        var attr = item.MakineId == Model?.MakineId ? "selected" : "";
                        <option @attr value="@item.MakineId">@item.MakineAd</option>
                    }

                </select>
            </div>
        </div>
    }

    <div class="form-group row">
        <div class="col-lg-12">
            <label>Biten Adet:</label>
           @Html.TextBoxFor(x => x.BitenAdet, new { @class = "form-control" })
        </div>
    </div>


</form>
<!--end::Form-->
