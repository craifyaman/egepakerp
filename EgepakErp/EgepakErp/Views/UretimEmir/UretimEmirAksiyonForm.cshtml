@using EgePakErp.Enums;
@{
    int UretimEmirId = ViewBag.UretimEmirId;
    int UretimEmirAksiyonTypeId = ViewBag.UretimEmirAksiyonTypeId;
}

<!--begin::Form-->
<form id="UretimEmirAksiyonForm">
    <input type="hidden" name="UretimEmirId" id="UretimEmirId" value="@UretimEmirId" />
    <input type="hidden" name="UretimEmirAksiyonTypeId" id="UretimEmirAksiyonTypeId" value="@UretimEmirAksiyonTypeId" />

    <div class="form-group row">
        @{ 
            var kisiList = BaseCalisan().ToList();
        }
        
        <div class="col-lg-12">
            <label>Çalışan Seçin:</label>
            <select class="form-control select2" id="CalisanId" name="CalisanId" required>
                <option>Çalışan Seçin</option>

                @foreach (var item in kisiList)
                {
                    <option value="@item.CalisanId">@item.AdSoyad</option>
                }

            </select>
        </div>

    </div>

    @if (UretimEmirAksiyonTypeId == (int)EUretimEmirAksiyonType.Enjeksiyon)
    {
        <div class="form-group row">
            <div class="col-lg-12">
                <label>Makine Seçin:</label>
                @{
                    var makineList = BaseMakine().ToList();
                }
                <select class="form-control select2 defaultSelect2" id="MakineId" name="MakineId">
                    <option>Makine Seçin</option>

                    @foreach (var item in makineList)
                    {
                        <option value="@item.MakineId">@item.MakineAd</option>
                    }

                </select>
            </div>
        </div>
    }

    <div class="form-group row">
        <div class="col-lg-12">
            <label>Biten Adet:</label>
            <input type="number" class="form-control" name="BitenAdet" id="BitenAdet" />
        </div>
    </div>


</form>
<!--end::Form-->
