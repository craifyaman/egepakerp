<div class="row align-items-center">
    <div class="col-lg-12 col-xl-12">
        <div class="row align-items-center">

            <div class="col-md-3 my-2 my-md-0">
                <div class="input-icon">
                    <input type="text" class="form-control form-control-solid" placeholder="Search..." id="searchQuery" />
                    <span>
                        <i class="flaticon2-search-1 text-muted"></i>
                    </span>
                </div>
            </div>
            <div class="col-md-3 my-2 my-md-0">
                <select class="form-control form-control-solid" id="cariGrupId">
                    <option value="">Cari Grup Seçiniz</option>
                    @foreach (var item in baseCariGrup)
                    {
                        <option value="@item.CariGrupId">@item.Adi</option>
                    }
                </select>
            </div>
            <div class="col-md-3 my-2 my-md-0">
                <select class="form-control form-control-solid" id="durum">
                    <option value="">Durum Şeçiniz</option>
                    @foreach (var item in baseDurum)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }

                </select>
            </div>
        </div>
    </div>
</div>
